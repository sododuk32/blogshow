{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"],
      "@util/*": ["src/util/*"],
      "@ui/*": ["src/ui/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/*"],
      "@handler/*": ["src/handler/*"],
      "@types/*": ["src/util/types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.css.ts",
    "src/app/api/giveKey"
  ],
  "exclude": ["node_modules"]
}
